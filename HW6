package sample;
import java.util.Scanner;
public class Main {
public static void main(String[] args) {
	
    /*Написать программу которая считает 4 целых числа с клавиатуры и выведет на экран самое
    большое из них.
    */
	Scanner sc = new Scanner (System.in);
    
	System.out.println("Введи число 1 ");
	int number1 = sc.nextInt();
	System.out.println("Введи число 2 ");
	int number2 = sc.nextInt();
	System.out.println("Введи число 3 ");
	int number3 = sc.nextInt();
	System.out.println("Введи число 4 ");
	int number4 = sc.nextInt();
	
	int maxNumber = number1;
	
	if (number2 > maxNumber) {
		maxNumber = number2;
	}
	if (number3 > maxNumber) {
		maxNumber = number3;
	}
	if (number4 > maxNumber) {
		maxNumber = number4;
	}
	System.out.println("Максимальное число = " + maxNumber);
	}
}
